def Pexe(env, name, sources):
    blah = name + '.nmf'
    progName = name + '.pexe'
    return env.Program(progName, sources)

def NexeNmf(env, target, source):
    tp = target[0].get_path()
    def n(arch):
        return {"url": '{0}_{1}.nexe'.format(tp, arch)}

    content = {
      "program": {
        "x86-64": n('x86_64'),
        "x86-32": n('x86_32'),
        "arm": n('arm'),
      }
    }

    json.dump(content, file(tp + '.nmf', 'wt'))

def PexeNmf(env, name):
    return env.Command(
        blah,
        prog,
        'python $NACL_SDK_ROOT/tools/create_nmf.py -o $TARGET $SOURCE -s ./pnacl/Debug',
    )

def TranslatePexe(env, name, sources, arch):
    env.Command(
        '{0}_{1}.nexe'.format(name, arch),
        sources,
        '$NACL_BIN/pnacl-translate -arch ' + arch + ' $SOURCE -o $TARGET'
    )

def NaClEnvironment():
    env = Environment(BUILDERS={'NexeNmf': Builder(action=NexeNmf)})
    env.AddMethod(Pexe, 'Pexe')

    env['NACL_HOST'] = 'host_x86_64'
    env['NACL_SDK_ROOT'] = '/Users/andy/src/nacl_sdk/pepper_28'
    env['NACL_TOOLCHAIN'] = '$NACL_SDK_ROOT/toolchain/mac_x86_pnacl/$NACL_HOST'
    env['NACL_BIN'] = '$NACL_SDK_ROOT/toolchain/mac_x86_pnacl/newlib/bin'
    env['CONFIG'] = 'Debug'

    env['NACL_ARCH'] = 'pnacl'

    env['CC'] = '$NACL_BIN/pnacl-clang'
    env['CXX'] = '$NACL_BIN/pnacl-clang++'

    env.Append(LIBPATH=[
            '$NACL_SDK_ROOT/lib/pnacl/$CONFIG'
        ]
    )

    env.Append(CPPDEFINES=[
            'NACL_ARCH=$NACL_ARCH',
            'NACL_SDK_DEBUG',
            'USE_TR1'
        ]
    )

    env.Append(CPPPATH=[
            '$NACL_SDK_ROOT/include'
        ]
    )

    env.Append(CXXFLAGS=[
        ]
    )

    env.Append(CFLAGS=[
            '-MMD',
            '-Wno-long-long',
        ]
    )

    env.Append(LIBS=[
            'ppapi',
            'ppapi_cpp',
        ]
    )

    return env

